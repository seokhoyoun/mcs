<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="Nexus.Portal.styles.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css?v=@(MudBlazor.Metadata.Version)" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <Routes @rendermode=RenderMode.InteractiveServer />
    <script src="_framework/blazor.web.js"></script>
    <script src="_content/MudBlazor/MudBlazor.min.js?v=@(MudBlazor.Metadata.Version)"></script>
    <!-- 2D renderer -->
    <script src="https://cdn.jsdelivr.net/npm/pixi.js@7.x/dist/pixi.min.js"></script>
    <!-- Optional 3D renderer (Three.js) via ES Modules -->
    <script type="module">
        import * as THREE_MOD from 'https://esm.sh/three@0.158.0';
        import { OrbitControls as OrbitControlsClass } from 'https://esm.sh/three@0.158.0/examples/jsm/controls/OrbitControls.js';
        const THREE_NS = Object.assign({}, THREE_MOD);
        THREE_NS.OrbitControls = OrbitControlsClass;
        window.THREE = THREE_NS;
    </script>
    <script src="pixi.js"></script>
    <script src="three-layer.js"></script>
</body>

</html>
